<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buyer_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.b2c.activity.BuyerSetActivity">

    <include
        android:id="@+id/toobar"
        layout="@layout/toolbar" />

    <com.example.b2c.widget.SettingItemView2
        android:id="@+id/siv_language"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toobar"
        android:layout_marginTop="@dimen/margin_normal" />

    <TextView
        android:id="@+id/tv_tuichu"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/siv_language"
        android:layout_marginTop="49dp"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/green_title"
        android:textSize="@dimen/font_16sp" />
</RelativeLayout>
