<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/hand"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_staff_car"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="用心做好每一单"
            android:textColor="@color/white" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_staff_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_normal">

        <ImageView
            android:id="@+id/iv_mineone4"
            android:layout_width="@dimen/padding_xlarge"
            android:layout_height="@dimen/padding_xlarge"
            android:layout_centerVertical="true"
            android:src="@drawable/order_two" />

        <TextView
            android:id="@+id/tv_info"
            style="@style/w_h_20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_mineone4" />

        <ImageView
            android:layout_width="@dimen/padding_xlarge"
            android:layout_height="@dimen/padding_xlarge"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>
</LinearLayout>