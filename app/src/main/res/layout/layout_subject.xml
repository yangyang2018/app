<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="132dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/ll_gohome"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/home_detaive"
            />
        <TextView
            android:id="@+id/tv_go_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_go_message"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/message_deative"
            />
        <TextView
            android:id="@+id/tv_go_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
<LinearLayout
    android:id="@+id/ll_facebook_share"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_centerVertical="true"
    android:gravity="center_vertical"
    >
    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/share"
        />
    <TextView
        android:id="@+id/tv_fenxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        />
</LinearLayout>
</LinearLayout>
