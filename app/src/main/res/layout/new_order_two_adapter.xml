<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"

        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_new_order"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="15dp"
            android:scaleType="fitXY"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/tv_new_order_biaoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/moren_textview"
                android:text="精美女装"/>
            <TextView
                android:id="@+id/tv_new_order_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_new_order_biaoti"
                android:text="美丽大方，好货"
                android:textColor="@color/moren_textview"
                android:layout_marginTop="7dp"
                />
            <TextView
                android:id="@+id/tv_new_order_jiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Ks 800"
                android:textColor="@color/orangered"
                />
            <TextView
                android:id="@+id/tv_new_order_shuliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="×1"
                android:textColor="@color/moren_textview"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
