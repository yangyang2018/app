<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_shop_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_shop_item_pic1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/padding_normal"
        android:src="@drawable/ic_fail_image"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:id="@+id/ll_shop_list_item_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/padding_normal"
        android:layout_marginRight="@dimen/padding_normal"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_shop_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/mine_info_text_size_lnormal"/>

        <TextView
            android:id="@+id/tv_shop_list_item_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/classify_text_size"/>
    </LinearLayout>

</LinearLayout>