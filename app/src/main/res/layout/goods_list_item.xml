<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_goods_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_goods_item_pic1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_goods_item_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="goods_name"
            android:gravity="center"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/font_15sp"/>

        <TextView
            android:id="@+id/tv_goods_item_price1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="goods_price"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="@dimen/font_13sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_goods_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_goods_item_pic2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_goods_item_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="goods_name"
            android:gravity="center"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/font_15sp"/>

        <TextView
            android:id="@+id/tv_goods_item_price2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="goods_name"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="@dimen/font_13sp"/>
    </LinearLayout>

</LinearLayout>