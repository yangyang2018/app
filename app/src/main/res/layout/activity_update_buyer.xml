<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_update_buyer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <include android:id="@+id/toobar"
        layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_normal"
        android:orientation="vertical"
        android:layout_below="@id/toobar">
        <com.example.b2c.widget.EditTextWithDelete
            android:id="@+id/et_textName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_top"
            android:textSize="@dimen/text_large"
            android:padding="@dimen/padding_xxsmall"
            android:background="@drawable/bg_edit_text"/>
        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_xxsmall"
            android:layout_below="@id/et_textName"
            android:background="@drawable/bg_edit_text"
            android:visibility="gone">
            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="男"/>
            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="女"/>
            <RadioButton
                android:id="@+id/rb_secret"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="保密"/>
        </RadioGroup>



    </LinearLayout>







</RelativeLayout>
