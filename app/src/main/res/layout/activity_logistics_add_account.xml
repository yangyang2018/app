<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        style="@style/mine_tiaomu"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_login_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/template_title_more_text_normal"/>
        <EditText
            android:id="@+id/et_login_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:singleLine="true"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_mima"
        style="@style/mine_tiaomu"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/template_title_more_text_normal"

            />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:singleLine="true"
            android:inputType="textPassword"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"

            />
    </LinearLayout>
    <LinearLayout
        style="@style/mine_tiaomu">
        <TextView
            android:id="@+id/tv_xing_q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/template_title_more_text_normal"/>
        <EditText
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:singleLine="true"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/mine_tiaomu"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_ming_q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/template_title_more_text_normal"/>
        <EditText
            android:id="@+id/et_ming"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:singleLine="true"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"/>

    </LinearLayout>
    <LinearLayout
        style="@style/mine_tiaomu">
        <TextView
            android:id="@+id/tv_phone_q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/template_title_more_text_normal"/>
        <EditText
            android:id="@+id/et_phone1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:singleLine="true"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"
            android:digits="1234567890"
            android:inputType="phone|number"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_youxiang"
        style="@style/mine_tiaomu"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_email_q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/template_title_more_text_normal"
            />
        <EditText
            android:id="@+id/et_youxiang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/mine_tiaomu"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_beizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/template_title_more_text_normal"/>
        <EditText
            android:id="@+id/et_beizhu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:singleLine="true"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"
            />
    </LinearLayout>
    </LinearLayout>

        <View
            android:id="@+id/view_zhedang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></View>
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_add_zizhanghao"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/hand"
        android:background="#ffffff"
        android:layout_marginTop="40dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        ></View>
</LinearLayout>