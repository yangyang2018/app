<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:background="@color/hand">

        <ImageView
            android:id="@+id/yuan_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/kuaidi"
            />

        <TextView
            android:id="@+id/tv_mine_logisttics_nicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yuan_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_mine_logisttics_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mine_logisttics_nicheng"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16sp" />

        <TextView
            android:id="@+id/tv_mine_logisttics_gongsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mine_logisttics_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_logistics_jiesuan"
            style="@style/mine_tiaomu">

            <ImageView
                android:id="@+id/iv_mineone1"
                android:layout_width="@dimen/padding_xlarge"
                android:layout_height="@dimen/padding_xlarge"
                android:src="@drawable/order_one" />

            <TextView
                android:id="@+id/jiesuanzhongxin"
                style="@style/w_h_20dp"
                android:layout_toRightOf="@+id/iv_mineone1" />

            <ImageView
                android:layout_width="@dimen/x28"
                android:layout_height="@dimen/padding_xlarge"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_logistics_zizhanghao_message"
            style="@style/mine_tiaomu">

            <ImageView
                android:id="@+id/iv_mineone2"
                android:layout_width="@dimen/padding_xlarge"
                android:layout_height="@dimen/padding_xlarge"
                android:src="@drawable/order_two" />

            <TextView
                android:id="@+id/zizhanghaoguanli"
                style="@style/w_h_20dp"
                android:layout_toRightOf="@+id/iv_mineone2" />

            <ImageView
                android:layout_width="@dimen/padding_xlarge"
                android:layout_height="@dimen/padding_xlarge"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_logistics_yunfei"
            style="@style/mine_tiaomu">

            <ImageView
                android:id="@+id/iv_mineone3"
                android:layout_width="@dimen/padding_xlarge"
                android:layout_height="@dimen/padding_xlarge"
                android:src="@drawable/order_shree" />

            <TextView
                android:id="@+id/wuliugongsi"
                style="@style/w_h_20dp"
                android:layout_toRightOf="@+id/iv_mineone3" />

            <ImageView
                android:layout_width="@dimen/padding_xlarge"
                android:layout_height="@dimen/padding_xlarge"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_logistics_wuliuxinxi"
            style="@style/mine_tiaomu">

            <ImageView
                android:id="@+id/iv_mineone4"
                android:layout_width="@dimen/padding_xlarge"
                android:layout_height="@dimen/padding_xlarge"
                android:src="@drawable/order_fore" />

            <TextView
                android:id="@+id/yunfeimoban"
                style="@style/w_h_20dp"
                android:layout_toRightOf="@+id/iv_mineone4" />

            <ImageView
                android:layout_width="@dimen/padding_xlarge"
                android:layout_height="@dimen/padding_xlarge"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"></View>
</LinearLayout>