<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_order_item_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_order_item_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_order_item_pic"
            android:lineSpacingExtra="5dp"
            android:lines="2"
            android:text="goods_name"
            android:textSize="@dimen/classify_text_size"/>

        <TextView
            android:id="@+id/tv_order_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:text="Â¥0.00"
            android:textColor="#f23030"
            android:textSize="@dimen/classify_text_size"/>

        <TextView
            android:id="@+id/tv_order_item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_order_item_name"
            android:layout_below="@id/tv_order_item_name"
            android:layout_marginTop="5dp"
            android:textColor="#a0a0a0"
            android:textSize="@dimen/classify_text_size"/>

        <TextView
            android:id="@+id/tv_order_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv_order_item_price"
            android:layout_below="@id/tv_order_item_price"
            android:layout_marginTop="5dp"
            android:textColor="#a0a0a0"
            android:textSize="@dimen/classify_text_size"/>

        <Button
            android:id="@+id/btn_refund_or_evaluate"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_order_item_amount"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_shape"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_12sp"/>
    </RelativeLayout>

</LinearLayout>