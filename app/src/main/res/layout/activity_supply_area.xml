<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/hand"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
       >
        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_left"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            />
        <ImageView
            android:id="@+id/shopping_car"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/good_evaluate_unclick"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/back"
            android:layout_toLeftOf="@+id/shopping_car"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_select_area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="7dp"
                android:background="@drawable/bg_zuo"

                >
                <TextView
                    android:id="@+id/tv_seate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_marginRight="5dp"
                    />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:src="@drawable/xiangxia"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/bg_you"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/search"
                    />
                <EditText
                    android:id="@+id/et_seek"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:hint="搜索商品"
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    android:background="@null"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_gongying"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
