<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_shop_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/padding_lsmall"
            android:layout_marginTop="10dp"
            android:button="@null"
            android:background="@drawable/selector_cb_background"/>
        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/padding_normal"
            android:layout_marginTop="10dp"
            android:text="shop_name"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_micro" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/padding_normal"
        android:layout_marginRight="@dimen/padding_normal"
        android:background="@color/divider_light" />
    <ListView
        android:id="@+id/lv_goods"
        android:layout_width="match_parent"
        android:divider="@color/divider_light"
        android:dividerHeight="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/padding_lsmall"
        android:layout_marginTop="10dp" >
    </ListView>

</LinearLayout>