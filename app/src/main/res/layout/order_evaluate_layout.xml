<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
        <ListView
            android:id="@+id/ls_evaluate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/white"
            android:overScrollMode="never"
            android:clipToPadding="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_shop_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="店铺评分"
                    android:textColor="@color/text_normal"
                    android:textSize="@dimen/font_15sp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tv_evaluate_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="产品描述"
                    android:textColor="@color/text_normal"
                    android:textSize="@dimen/font_15sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_description_reduce"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/add_btn_shape"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="@dimen/dimen_font_size_xsmall"/>
                    <EditText
                        android:id="@+id/et_description"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="@dimen/dimen_font_size_xsmall"/>
                    <Button
                        android:id="@+id/btn_description_add"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/add_btn_shape"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="@dimen/dimen_font_size_xsmall"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tv_evaluate_delivery_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="物流服务"
                    android:textColor="@color/text_normal"
                    android:textSize="@dimen/font_15sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_delivery_reduce"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/add_btn_shape"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="@dimen/dimen_font_size_xsmall"/>

                    <EditText
                        android:id="@+id/et_delivery"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="@dimen/dimen_font_size_xsmall"/>

                    <Button
                        android:id="@+id/btn_delivery_add"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/add_btn_shape"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="@dimen/dimen_font_size_xsmall"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tv_evaluate_service_attitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="服务态度"
                    android:textColor="@color/text_normal"
                    android:textSize="@dimen/font_15sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_attitude_reduce"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/add_btn_shape"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="@dimen/dimen_font_size_xsmall"/>
                    <EditText
                        android:id="@+id/et_attitude_num"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="@dimen/dimen_font_size_xsmall"/>
                    <Button
                        android:id="@+id/btn_attitude_add"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/add_btn_shape"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="@dimen/dimen_font_size_xsmall"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_shape"
            android:text="提交"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>