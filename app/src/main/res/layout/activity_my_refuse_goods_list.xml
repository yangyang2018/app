<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar"></include>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_seller_order_daichuli"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="待处理"
        android:gravity="center"
        android:textColor="@color/hand"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/tv_seller_order_yichuli"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="已处理"
        android:gravity="center"
        android:textSize="12sp"/>
</LinearLayout>
    <View
        android:id="@+id/seller_indicate_line"
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/main_ll_tabs"
        android:background="@color/hand" />
    <com.example.b2c.widget.LazyViewPager
        android:id="@+id/seller_order_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_ll_tabs"
        android:background="@color/white"
        />
</LinearLayout>
