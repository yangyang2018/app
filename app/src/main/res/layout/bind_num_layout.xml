<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

   <include
       layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/et_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_border_size_llarge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:hint="请输入手机号码"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_verify"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/padding_llarge"
            android:layout_weight="0.8"
            android:background="#ffffff"
            android:hint="请输入验证码"/>

        <Button
            android:id="@+id/btn_get_verify"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/padding_llarge"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/button_shape"
            android:text="获取验证码"
            android:textColor="@android:color/white"/>
    </LinearLayout>


    <EditText
        android:id="@+id/et_new_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_llarge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:visibility="gone"
        android:hint="请输入密码"/>

    <EditText
        android:id="@+id/et_check_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_llarge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:visibility="gone"
        android:hint="请确认密码"/>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_border_size_lllarge"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape"
        android:text="确认"
        android:textColor="@android:color/white"/>

</LinearLayout>