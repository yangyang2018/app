<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/tv_title_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_goods_statue"
            android:gravity="center"
            android:padding="7dp"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_code_label"
                android:layout_width="match_parent"
                android:text="退款编号"
                android:layout_height="wrap_content"
                android:textColor="@color/text_normal"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv_orderCode_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单编号"
                android:textColor="@color/text_normal"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_refundReason_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="理由"
                android:textColor="@color/text_normal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_light"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_orderCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_light"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_refundReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_light"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_sample_pic"
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_sample_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_light"/>
            <TextView
                android:id="@+id/tv_sample_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_light"/>
            <TextView
                android:id="@+id/tv_sample_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/item_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_refundPrice_title"
            android:layout_width="wrap_content"
            android:textColor="@color/red"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_refundPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/red" />
        <TextView
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_select_courier"
            android:padding="4dp"
            android:text="同意"
            android:textColor="@color/main_blue"/>

        <TextView
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_select_courier"
            android:padding="4dp"
            android:text="拒绝"
            android:textColor="@color/main_blue"/>
    </LinearLayout>
    <include layout="@layout/item_line" />

</LinearLayout>