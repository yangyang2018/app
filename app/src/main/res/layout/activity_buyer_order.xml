<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar"/>
    <RadioGroup
        android:id="@+id/rg_order_select_type"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_border_size_llarge"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_all"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:checked="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部"
            android:textColor="@drawable/order_textcolor"
            android:textSize="@dimen/cart_goods_text_size"/>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/padding_xlarge"
            android:background="#cccccc"/>

        <RadioButton
            android:id="@+id/rb_wait_send"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待发货"
            android:textColor="@drawable/order_textcolor"
            android:textSize="@dimen/cart_goods_text_size"/>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_border_size_xlarge"
            android:background="#cccccc"/>

        <RadioButton
            android:id="@+id/rb_wait_recv"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待收货"
            android:textColor="@drawable/order_textcolor"
            android:textSize="@dimen/cart_goods_text_size"/>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_border_size_xlarge"
            android:background="#cccccc"/>

        <RadioButton
            android:id="@+id/rb_done"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已签收"
            android:textColor="@drawable/order_textcolor"
            android:textSize="@dimen/cart_goods_text_size"/>
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_border_size_xlarge"
            android:background="#cccccc"/>

        <RadioButton
            android:id="@+id/rb_reject"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="拒收"
            android:textColor="@drawable/order_textcolor"
            android:textSize="@dimen/cart_goods_text_size"/>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_border_size_xlarge"
            android:background="#cccccc"/>

        <RadioButton
            android:id="@+id/rb_return"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="退货"
            android:textColor="@drawable/order_textcolor"
            android:textSize="@dimen/cart_goods_text_size"/>
    </RadioGroup>
    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"/>
</LinearLayout>