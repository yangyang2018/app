<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_sample_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <TextView
            android:id="@id/tv_sample_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="222222222222"
            android:gravity="center_vertical"
            android:padding="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_evaluate"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入你对该订单的评价"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/font_16sp"/>
        <RadioGroup
            android:id="@+id/rg_evaluate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_good_evaluate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/good_evaluate_selector"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="好评"/>
            <RadioButton
                android:id="@+id/rb_normal_evaluate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableLeft="@drawable/normal_evaluate_selector"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="中评"/>
            <RadioButton
                android:id="@+id/rb_bad_evaluate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableLeft="@drawable/bad_evaluate_selector"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="差评"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>