<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ityoucai="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/seller_bar">

                <LinearLayout
                    android:id="@+id/ll_head_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/seller_bar"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <com.example.b2c.widget.CircleImg
                            android:id="@+id/ci_logo"
                            android:layout_width="@dimen/mine_head_height"
                            android:layout_height="@dimen/mine_head_height"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_marginRight="@dimen/margin_normal"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/shop_no_logo" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_username"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="snake"
                                        android:textColor="@color/white" />

                                    <TextView
                                        android:id="@+id/tv_shop_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text="熊大水产店"
                                        android:textColor="@color/white" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="2dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/white" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_evaluate_service_attitude_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="服务态度"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/tv_evaluate_service_attitude"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="9.9"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_evaluate_service_introduce_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="服务描述"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/tv_evaluate_service_introduce"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="9.9"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_evaluate_service_speed_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="发货速度"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/tv_evaluate_service_speed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="9.9"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/arrow_right" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_head_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.example.b2c.widget.CircleImg
                            android:layout_width="@dimen/mine_head_height"
                            android:layout_height="@dimen/mine_head_height"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/shop_no_logo" />

                        <TextView
                            android:id="@+id/tv_username_two"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="yhm"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_large" />

                        <TextView
                            android:id="@+id/tv_shop_notice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/padding_xxsmall"
                            android:gravity="center"
                            android:text="未设置店铺信息"
                            android:textColor="@color/white_alpha"
                            android:textSize="@dimen/text_normal" />

                        <Button
                            android:id="@+id/btn_open_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_xxsmall"
                            android:background="@color/tomato"
                            android:clickable="false"
                            android:enabled="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="去开店"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_normal" />

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.example.b2c.widget.SettingItemView
                    android:id="@+id/siv_company_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ityoucai:lefticon="@drawable/ic_ls_one" />

                <com.example.b2c.widget.SettingItemView
                    android:id="@+id/siv_settle_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    ityoucai:lefticon="@drawable/ic_ls_two" />

                <com.example.b2c.widget.SettingItemView
                    android:id="@+id/siv_deliver_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    ityoucai:lefticon="@drawable/ic_ls_three" />

                <com.example.b2c.widget.SettingItemView
                    android:id="@+id/siv_depot_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    ityoucai:lefticon="@drawable/ic_ls_four" />

                <com.example.b2c.widget.SettingItemView
                    android:id="@+id/siv_security_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    ityoucai:lefticon="@drawable/mine_order" />
                <RelativeLayout
                    android:id="@+id/siv_lives_list"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/iv_pp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/shenghuo"
                        android:layout_marginLeft="11dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/seller_lives"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_pp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="11dp"
                        android:textColor="@color/mine_info_text_color"
                        android:textSize="@dimen/mine_info_text_size_normal"
                        />
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="17dp"
                        android:background="@drawable/arrow_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="11dp"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_light"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>