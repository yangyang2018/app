<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/tv_shop_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号:"
        android:textColor="@color/moren_textview"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/tv_shop_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456789"
        android:textColor="@color/moren_textview"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_shop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="15dp"
            android:scaleType="fitXY"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/tv_shop_biaoti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/moren_textview"
                android:text="精美女装"/>
            <TextView
                android:id="@+id/tv_shop_jiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Ks 800"
                android:textColor="@color/orangered"
                />
            <TextView
                android:id="@+id/tv_shop_kucun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="×1"
                android:textColor="@color/moren_textview"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        ></View>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_shop_xiajia"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="下架"
            android:gravity="center"
            android:background="@drawable/bg_edit_text"
            android:textColor="@color/moren_textview"
            android:textSize="12sp"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />
            <TextView
                android:id="@+id/tv_shop_delete"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:text="删除"
                android:gravity="center"
                android:background="@drawable/bg_edit_text"
                android:textColor="@color/moren_textview"
                android:textSize="12sp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_shop_xiugai"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="修改"
                android:gravity="center"
                android:background="@drawable/bg_edit_text"
                android:layout_marginLeft="15dp"
                android:textColor="@color/moren_textview"
                android:textSize="12sp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                />
    </LinearLayout>
</LinearLayout>
