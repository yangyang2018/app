<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_delivery_name"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:textColor="@color/black" />


                    <include layout="@layout/item_line" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:textColor="@color/black" />


                    <include layout="@layout/item_line" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <include layout="@layout/item_line" />

                    <TextView
                        android:id="@+id/tv_link_way"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <include layout="@layout/item_line" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <include layout="@layout/item_line" />

                    <TextView
                        android:id="@+id/tv_bank_account"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <include layout="@layout/item_line" />

                    <TextView
                        android:id="@+id/tv_idCard"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <include layout="@layout/item_line" />

                    <TextView
                        android:id="@+id/tv_profile"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <com.example.b2c.widget.EditTextWithDelete
                        android:id="@+id/et_delivery"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:drawableRight="@drawable/ic_delete"
                        android:padding="10dp" />

                    <include layout="@layout/item_line" />

                    <com.example.b2c.widget.EditTextWithDelete
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:drawableRight="@drawable/ic_delete"
                        android:padding="10dp" />

                    <include layout="@layout/item_line" />

                    <com.example.b2c.widget.EditTextWithDelete
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:drawableRight="@drawable/ic_delete"
                        android:inputType="number"
                        android:padding="10dp" />

                    <include layout="@layout/item_line" />

                    <com.example.b2c.widget.EditTextWithDelete
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:drawableRight="@drawable/ic_delete"
                        android:inputType="number"
                        android:padding="10dp" />

                    <include layout="@layout/item_line" />

                    <com.example.b2c.widget.EditTextWithDelete
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:drawableRight="@drawable/ic_delete"
                        android:padding="10dp" />

                    <include layout="@layout/item_line" />

                    <com.example.b2c.widget.EditTextWithDelete
                        android:id="@+id/cardId"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:drawableRight="@drawable/ic_delete"
                        android:inputType="number"
                        android:padding="10dp" />

                    <include layout="@layout/item_line" />

                    <com.example.b2c.widget.EditTextWithDelete
                        android:id="@+id/idCard"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:drawableRight="@drawable/ic_delete"
                        android:padding="10dp" />

                    <include layout="@layout/item_line" />

                    <com.example.b2c.widget.EditTextWithDelete
                        android:id="@+id/tv_remark"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:drawableRight="@drawable/ic_delete"
                        android:padding="10dp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_identity"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_positive"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_image_select"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_reverse"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/bg_image_select"
                        android:scaleType="centerCrop" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@drawable/bg_red_login"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>