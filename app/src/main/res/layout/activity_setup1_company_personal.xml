<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setup1_company"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.example.b2c.activity.seller.Setup1CompanyPersonalActivity">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_border_size_xlarge"
            android:layout_marginRight="@dimen/dimen_border_size_xlarge"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/company_set_personal_one"
                    android:scaleType="center"
                    android:padding="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_personal_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColorHint="#d1d1d1d1"
                        android:textSize="@dimen/text_mini"
                        android:padding="5dp"
                        android:textColor="@color/hand"
                        android:text="个人信息"/>
                    <TextView
                        android:id="@+id/tv_settle_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColorHint="#d1d1d1d1"
                        android:textSize="@dimen/text_mini"
                        android:padding="5dp"
                        android:text="结算账号"/>
                    <TextView
                        android:id="@+id/tv_personal_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColorHint="#d1d1d1d1"
                        android:textSize="@dimen/text_mini"
                        android:padding="5dp"
                        android:text="审核通过"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/shape_edit_gray">
                <com.example.b2c.widget.EditTextWithDelete
                    android:id="@+id/et_firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_username"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:hint="名"
                    android:background="@null"
                    android:drawableRight="@drawable/ic_delete"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawablePadding="10dp"
                    android:textColorHint="#d1d1d1d1" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/shape_edit_gray">
            <com.example.b2c.widget.EditTextWithDelete
                android:id="@+id/et_lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_username"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:hint="姓"
                android:background="@null"
                android:drawableRight="@drawable/ic_delete"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="#d1d1d1d1" />
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_edit_gray"
            android:padding="5dp">
            <RadioGroup
                android:id="@+id/rg_sex"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_xxsmall"
                android:orientation="horizontal"
                android:visibility="visible">
                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"/>
                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"/>
                <RadioButton
                    android:id="@+id/rb_secret"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="保密"/>
            </RadioGroup>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@drawable/shape_edit_gray">

            <TextView
                android:id="@+id/tv_contact_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="联系地址"
                android:background="@null"
                android:layout_toLeftOf="@id/iv_select_address"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="#d1d1d1d1" />

            <ImageView
                android:id="@+id/iv_select_address"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:background="@drawable/classify_indicator_expand"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@drawable/shape_edit_gray">
            <com.example.b2c.widget.EditTextWithDelete
                android:id="@+id/et_idCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_username"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:hint="注册地址"
                android:background="@null"
                android:drawableRight="@drawable/ic_delete"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="#d1d1d1d1" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@drawable/shape_edit_gray">
            <TextView
                android:id="@+id/tv_register_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:hint="注册时间"
                android:background="@null"
                android:layout_toLeftOf="@+id/iv_select_date"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="#d1d1d1d1" />
            <ImageView
                android:id="@+id/iv_select_date"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/classify_indicator_expand"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/shape_edit_gray">
                <com.example.b2c.widget.EditTextWithDelete
                    android:id="@+id/et_company_businessScope"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_username"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:hint="经营范围"
                    android:background="@null"
                    android:drawableRight="@drawable/ic_delete"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawablePadding="10dp"
                    android:textColorHint="#d1d1d1d1" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="140dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/iv_positive"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_image_select"
                    android:scaleType="centerCrop"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tv_positive_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="ID正面"
                    android:textColor="@color/red"
                    android:textSize="16dip" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_height="140dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/iv_reverse"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_image_select"
                    android:scaleType="centerCrop"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tv_reverse_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="ID反面"
                    android:textColor="@color/red"
                    android:textSize="16dip" />
            </FrameLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="下一步"
            android:background="@drawable/button_shape"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>






