<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_company_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar_seller"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_company_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="公司信息"
                android:padding="10dp"
                />
            <com.example.b2c.widget.SettingItemView2
                android:id="@+id/siv_companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <com.example.b2c.widget.SettingItemView2
                android:id="@+id/siv_regAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <com.example.b2c.widget.SettingItemView2
                android:id="@+id/siv_regDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <com.example.b2c.widget.SettingItemView2
                android:id="@+id/siv_totalPersonNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <com.example.b2c.widget.SettingItemView2
                android:id="@+id/siv_businessScope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv_linkman_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="联系人信息"
                android:padding="10dp"
                />
            <com.example.b2c.widget.SettingItemView2
                android:id="@+id/siv_lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <com.example.b2c.widget.SettingItemView2
                android:id="@+id/siv_firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <com.example.b2c.widget.SettingItemView2
                android:id="@+id/siv_contactEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <com.example.b2c.widget.SettingItemView2
                android:id="@+id/siv_contactMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <com.example.b2c.widget.SettingItemView2
                android:id="@+id/siv_contactLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
